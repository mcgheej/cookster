/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@app-container/*": ["libs/app-container/*"],
      "@data-access/authentication/*": ["libs/data-access/authentication/*"],
      "@data-access/plans/*": ["libs/data-access/plans/*"],
      "@feature/home/*": ["libs/feature/home/*"],
      "@feature/login/*": ["libs/feature/login/*"],
      "@feature/page-not-found/*": ["libs/feature/page-not-found/*"],
      "@feature/plans/*": ["libs/feature/plans/*"],
      "@util/app-config/*": ["libs/util/app-config/*"],
      "@util/data-types/*": ["libs/util/data-types/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
