/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@app-container/*": ["libs/app-container/*"],
      "@data-access/authentication/*": ["libs/data-access/authentication/*"],
      "@data-access/kitchens/*": ["libs/data-access/kitchens/*"],
      "@data-access/plans/*": ["libs/data-access/plans/*"],
      "@feature/colors/*": ["libs/feature/colors/*"],
      "@feature/home/*": ["libs/feature/home/*"],
      "@feature/login/*": ["libs/feature/login/*"],
      "@feature/page-not-found/*": ["libs/feature/page-not-found/*"],
      "@feature/plans/*": ["libs/feature/plans/*"],
      "@feature/plan-editor/*": ["libs/feature/plan-editor/*"],
      "@ui/activity-dialog/*": ["libs/ui/dialog-activity/*"],
      "@ui/dialog-activity-properties/*": ["libs/ui/dialog-activity-properties/*"],
      "@ui/dialog-plan-properties/*": ["libs/ui/dialog-plan-properties/*"],
      "@ui/dialog-time-window/*": ["libs/ui/dialog-time-window/*"],
      "@ui/mat-colors/*": ["libs/ui/mat-colors/*"],
      "@ui/multi-panel/*": ["libs/ui/multi-panel/*"],
      "@ui/snack-bars/*": ["libs/ui/snack-bars/*"],
      "@ui/status-bar/*": ["libs/ui/status-bar/*"],
      "@ui/text-speech/*": ["libs/ui/text-speech/*"],
      "@util/app-config/*": ["libs/util/app-config/*"],
      "@util/color-utilities/*": ["libs/util/color-utilities/*"],
      "@util/data-types/*": ["libs/util/data-types/*"],
      "@util/date-utilities/*": ["libs/util/date-utilities/*"],
      "@util/misc-utilities/*": ["libs/util/misc-utilities/*"],
      "@util/tiler/*": ["libs/util/tiler/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ]
}
